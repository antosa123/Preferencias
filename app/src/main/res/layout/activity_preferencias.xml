<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Preferencias">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_guardar"
        android:id="@+id/bGuardar"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/tv_dni"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recuperar"
        android:id="@+id/bRecuperar"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bGuardar"
        android:layout_marginBottom="137dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_nombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:hint="Nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_dni"
        android:layout_below="@+id/tv_nombre"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:hint="DNI" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_date"
        android:layout_below="@+id/tv_dni"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:hint="Fecha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_sexo"
        android:layout_below="@+id/tv_date"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:hint="Sexo" />
</RelativeLayout>
